<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="360dp"
              android:layout_height="370dp"
              android:layout_gravity="center"
    >

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="90dp"
      android:background="@color/secondary_color"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="10dp"
      >

    <ImageView
        android:src="@drawable/popup_logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"/>
  </LinearLayout>

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/primary_color"
      android:layout_weight="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_view"
        android:textColor="@color/secondary_color"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:hint="YOUR DRIVER ARRIVED!"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_marginBottom="10dp"
          >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/msg_view"
            android:textColor="@color/secondary_color"
            android:textAlignment="center"
            android:autoText="false"
            android:singleLine="false"
            android:hint="Your centent here"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            />
      </LinearLayout>
    </ScrollView>

  </LinearLayout>

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/primary_color">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/secondary_color"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

      <Button
          android:text="@android:string/ok"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/btn_ok"
          android:background="@android:color/transparent"
          android:textColor="@color/secondary_color"
          android:layout_weight="0.5"/>

      <Button
          android:text="Track driver"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/btn_open_tracking"
          android:layout_weight="0.5"
          android:background="@color/primary_color"
          android:textColor="@color/secondary_color"
          android:visibility="visible"/>

      <Button
          android:text="Rate Driver"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/btn_rate_driver"
          android:layout_weight="0.5"
          android:background="@color/primary_color"
          android:textColor="@color/secondary_color"
          android:visibility="visible"/>

    </LinearLayout>
  </LinearLayout>

</LinearLayout>